{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": { 
        "distDir": "dist",
        "buildCommand": "npm run build"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "src": "/assets/(.*)",
      "headers": { 
        "cache-control": "public, max-age=31536000, immutable",
        "x-content-type-options": "nosniff"
      },
      "dest": "/assets/$1"
    },
    {
      "src": "/favicon.ico",
      "headers": { 
        "cache-control": "public, max-age=86400"
      },
      "dest": "/favicon.ico"
    },
    {
      "src": "/manifest.json",
      "headers": { 
        "cache-control": "public, max-age=86400"
      },
      "dest": "/manifest.json"
    },
    {
      "src": "/(.*\\.(js|css|png|jpg|jpeg|gif|svg|woff|woff2|ttf|eot|ico|webp|avif))",
      "headers": { 
        "cache-control": "public, max-age=31536000, immutable"
      },
      "dest": "/$1"
    },
    {
      "src": "/(.*)",
      "headers": {
        "x-frame-options": "DENY",
        "x-content-type-options": "nosniff",
        "x-xss-protection": "1; mode=block",
        "referrer-policy": "strict-origin-when-cross-origin"
      },
      "dest": "/index.html"
    }
  ],
  "rewrites": [
    {
      "source": "/((?!api|assets|favicon.ico|manifest.json).*)",
      "destination": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options", 
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    }
  ],
  "functions": {
    "app.js": {
      "maxDuration": 30
    }
  },
  "github": {
    "silent": true
  },
  "env": {
    "NODE_ENV": "production"
  }
}
